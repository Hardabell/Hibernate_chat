<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hibernate.Hibernated">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_launcher_hibernate"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_launcher_hibernate"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hibernate.Hibernated.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hibernate.Hibernated.RegisterActivity"
            android:parentActivityName="com.hibernate.Hibernated.StartActivity" />
        <activity android:name="com.hibernate.Hibernated.MainActivity" />
        <activity
            android:name="com.hibernate.Hibernated.LoginActivity"
            android:parentActivityName="com.hibernate.Hibernated.StartActivity" />
        <activity android:name="com.hibernate.Hibernated.MessageActivity" />
        <activity
            android:name="com.hibernate.Hibernated.ResetPasswordActivity"
            android:parentActivityName="com.hibernate.Hibernated.LoginActivity" />

        <service android:name="com.hibernate.Hibernated.Notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="com.hibernate.Hibernated.Notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>